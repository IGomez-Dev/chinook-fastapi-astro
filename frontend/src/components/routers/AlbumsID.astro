---
export const prerender = false;

const { id } = Astro.params;
const res = await fetch(`http://127.0.0.1:8000/albums/${id}`);
const album: { AlbumId: number; ArtistId: number; Title: string } = await res.json();
---

<h2 class="text-white text-3xl font-bold text-center my-6">
  Detalles del Álbum
</h2>

<div class="flex justify-center items-center mt-10">
  <div class="border border-gray-700 rounded-xl p-8 shadow-lg hover:shadow-2xl transition transform duration-300 text-center bg-slate-900/60 backdrop-blur-sm max-w-md w-full">
    <h4 class="text-sm text-gray-400">ID (PK)</h4>
    <h3 class="text-2xl text-white font-bold mb-3">{album.AlbumId}</h3>
    <h4 class="text-sm text-gray-400">Título</h4>
    <h3 class="text-2xl text-white font-bold mb-3">{album.Title}</h3>
    <h4 class="text-sm text-gray-400">ArtistId (FK): </h4>
    <h3 class="text-2xl text-white font-bold mb-3">{album.ArtistId}</h3>


    <a
      href="/albums/get"
      class="inline-flex items-center mt-4 bg-gray-700 text-white px-5 py-2.5 rounded-xl shadow-md hover:bg-gray-800 hover:shadow-lg transition-all duration-200"
      >
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Volver
    </a>
    
  </div>
</div>
